<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="120dp"
    android:paddingLeft="@dimen/spacing_medium"
    android:paddingBottom="@dimen/spacing_medium"
    android:background="@color/colorPrimary">
    
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/nav_view_header_user_pricture"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/spacing_medium"
        fresco:placeholderImage="@drawable/user_picture_placeholder"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:roundAsCircle="true"/>

    <TextView
        android:id="@+id/nav_view_header_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/nav_view_header_user_pricture"
        tools:text="Username"
        android:textColor="@android:color/white"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/nav_view_header_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/nav_view_header_user_pricture"
        android:layout_below="@id/nav_view_header_user_name"
        android:paddingTop="@dimen/spacing_small"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="15sp"
        android:text="@string/logout"/>

</RelativeLayout>